<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="univie.ac.at.meineinkaufswagerl.standingorder.StandingOrderEditSpeechActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btnRead"
                android:layout_alignTop="@+id/linearLayout"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ear_icon"
                android:layout_x="255dp"
                android:layout_y="41dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnSpeak"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:src="@drawable/mouth_icon"
                android:layout_x="28dp"
                android:layout_y="406dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/extraListe"
                android:layout_above="@+id/linearLayout"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/textTextView"
                android:layout_marginTop="0dp"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/btnRead"
                android:layout_x="13dp"
                android:layout_y="90dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btnRemove"
                android:src="@drawable/index_icon"
                android:layout_alignBottom="@+id/extraListe"
                android:layout_alignParentEnd="true"
                android:layout_x="260dp"
                android:layout_y="161dp"
                android:layout_weight="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Weiter"
                android:id="@+id/nextButton"
                android:onClick="goToNextPage"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_x="193dp"
                android:layout_y="406dp"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
