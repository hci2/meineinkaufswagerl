<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wählen Sie wie sie den Assistenten bedienen wollen"
        android:id="@+id/infoText"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:onClick="readInfoText"/>

    <Button
        android:layout_width="230dp"
        android:layout_height="100dp"
        android:text="Sprachunterstützt"
        android:id="@+id/sprachButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:textSize="19dp"
        android:onClick="goToNextPage"/>

    <Button
        android:layout_width="230dp"
        android:layout_height="100dp"
        android:text="Manuelle Eingabe"
        android:id="@+id/manuellButton"
        android:layout_gravity="center_horizontal"
        android:textSize="19dp"
        android:layout_marginTop="70dp" />
</LinearLayout>