<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="univie.ac.at.meineinkaufswagerl.profile.ProfileUnvertragSpeechActivity">
    <TextView
        android:layout_width="314dp"
        android:layout_height="108dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/intro_unvertrag"
        android:id="@+id/infoText"
        android:layout_x="19dp"
        android:layout_y="16dp"
        android:textSize="19dp"
        android:onClick="readInfoText"/>

    <ListView
        android:layout_width="160dp"
        android:layout_height="205dp"
        android:id="@+id/listIntolerances"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:layout_x="13dp"
        android:layout_y="115dp" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/speakButton"
        android:layout_x="210dp"
        android:layout_y="113dp"
        android:src="@drawable/mouth_icon"
        android:onClick="speakIntolerances"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text="Intoleranzen vorlesen"
        android:id="@+id/readButton"
        android:layout_x="50dp"
        android:layout_y="325dp"
        android:textSize="19dp"
        android:onClick="readIntolerances"/>

    <Button
        android:layout_width="177dp"
        android:layout_height="102dp"
        android:text="Meine Intoleranzen vorlesen"
        android:id="@+id/readMyIntolerancesButton"
        android:layout_x="175dp"
        android:layout_y="215dp"
        android:textSize="19dp"
        android:onClick="readMyIntolerances"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text="Weiter"
        android:id="@+id/nextButton"
        android:layout_x="133dp"
        android:layout_y="410dp"
        android:textSize="19dp"
        android:onClick="goToNextPage"/>

</AbsoluteLayout>
