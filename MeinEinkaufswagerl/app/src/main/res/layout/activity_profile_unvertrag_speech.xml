<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="univie.ac.at.meineinkaufswagerl.profile.ProfileUnvertragSpeechActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/intro_unvertrag"
            android:id="@+id/infoText"
            android:layout_x="19dp"
            android:layout_y="0dp"
            android:textSize="19dp"
            android:onClick="readInfoText"
            android:layout_weight="6.4"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.5">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listIntolerances"
                android:layout_x="13dp"
                android:layout_y="125dp"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/readOneButton"
                    android:layout_x="208dp"
                    android:layout_y="130dp"
                    android:src="@drawable/ear_icon"
                    android:onClick="readOneIntolerance"
                    android:layout_weight="1"
                    android:background="#7dd0e5"
                    android:layout_marginBottom="3.5dp" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/speakButton"
                    android:layout_x="210dp"
                    android:layout_y="230dp"
                    android:src="@drawable/mouth_icon"
                    android:onClick="speakIntolerances"
                    android:layout_weight="1"
                    android:background="#7dd0e5"
                    android:layout_marginTop="3.5dp"
                    android:layout_marginBottom="3.5dp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Intoleranzen vorlesen"
            android:id="@+id/readButton"
            android:layout_x="10dp"
            android:layout_y="320dp"
            android:textSize="18dp"
            android:onClick="readIntolerances"
            android:layout_weight="6"
            android:background="#7dd0e5"
            android:layout_marginTop="3.5dp"
            android:layout_marginBottom="3.5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Meine Intoleranzen vorlesen"
                android:id="@+id/readMyIntolerancesButton"
                android:layout_x="10dp"
                android:layout_y="392dp"
                android:textSize="18dp"
                android:onClick="readMyIntolerances"
                android:layout_weight="1"
                android:background="#7dd0e5"
                android:layout_marginTop="3.5dp"
                android:layout_marginRight="3.5dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Weiter"
                android:id="@+id/nextButton"
                android:layout_x="190dp"
                android:layout_y="392dp"
                android:textSize="18dp"
                android:onClick="goToNextPage"
                android:layout_weight="1"
                android:background="#7dd0e5"
                android:layout_marginTop="3.5dp"
                android:layout_marginLeft="3.5dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
