<?xml version="1.0" encoding="utf-8"?>
        <AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lastInputText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:textColor="@color/primary_text_default_material_light"
                android:textSize="26dp"
                android:textStyle="normal" />

            <ImageButton
            android:id="@+id/btnSpeak"
            android:layout_width="wrap_content"
            android:layout_height="107dp"
            android:background="@null"
            android:src="@drawable/mouth_icon"
            android:layout_marginRight="40dp"
                android:layout_x="28dp"
                android:layout_y="400dp" />

    <ListView
        android:layout_width="263dp"
        android:layout_height="364dp"
        android:id="@+id/textListView"
        android:layout_above="@+id/linearLayout"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/textTextView"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnRead"
        android:layout_x="13dp"
        android:layout_y="14dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="89dp"
        android:id="@+id/btnRead"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ear_icon"
        android:layout_gravity="right"
        android:layout_x="284dp"
        android:layout_y="41dp" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btnChange"
        android:src="@drawable/change_icon"
        android:layout_below="@+id/textTextView"
        android:layout_alignParentEnd="true"
        android:layout_x="287dp"
        android:layout_y="290dp" />

    <ImageButton
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:id="@+id/btnIndex"
        android:src="@drawable/index_icon"
        android:layout_alignBottom="@+id/textListView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="145dp"
        android:layout_x="284dp"
        android:layout_y="161dp" />

            <Button
                android:layout_width="179dp"
                android:layout_height="96dp"
                android:text="Weiter zur BestÃ¤tigung"
                android:id="@+id/nextButton"
                android:onClick="goToNextPage"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.14"
                android:layout_x="193dp"
                android:layout_y="406dp"
                android:textSize="15dp" />

    </AbsoluteLayout>
