<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="univie.ac.at.meineinkaufswagerl.profile.ProfileNameSpeechActivity">


    <TextView
        android:layout_width="330dp"
        android:layout_height="89dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/intro_name"
        android:id="@+id/infoText"
        android:layout_x="19dp"
        android:layout_y="16dp"
        android:textSize="19dp"
        android:onClick="readInfoText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/firstnameView"
        android:layout_x="32dp"
        android:layout_y="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lastnameView"
        android:layout_x="32dp"
        android:layout_y="260dp" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/firstnameMouth"
        android:layout_x="239dp"
        android:layout_y="113dp"
        android:src="@drawable/mouth_icon"
        android:onClick="speakFirstname"/>

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/lastnameMouth"
        android:layout_x="239dp"
        android:layout_y="220dp"
        android:src="@drawable/mouth_icon"
        android:onClick="speakLastname"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text="Namen vorlesen"
        android:id="@+id/readButton"
        android:layout_x="85dp"
        android:layout_y="325dp"
        android:textSize="19dp"
        android:onClick="readNames"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text="Weiter"
        android:id="@+id/nextButton"
        android:layout_x="133dp"
        android:layout_y="410dp"
        android:textSize="19dp"
        android:onClick="goToNextPage"/>

</AbsoluteLayout>
